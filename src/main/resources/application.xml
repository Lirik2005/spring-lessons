<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- В бине driver мы вызываем конкретный конструктор класса String, который на вход просит строку-->
    <bean id="driver" class="java.lang.String">
        <constructor-arg type="java.lang.String" value="PostgresDriver"/>
    </bean>

    <!-- С помощью атрибута scope мы можем решать использовать ли один и тот же бин (будет лежать в application context), либо каждый раз
    создавать новый. По умолчанию все бины это singleton. Если указать prototype, то каждый раз у нас будет новый бин
    В таком варианте у нас бин из строки ниже и бин для CompanyRepository будут разные (запусти дебаг и увидишь, что ConnectionPool
    разные)-->
    <bean id="pool1" name="p1, first" class="org.example.database.pool.ConnectionPool" scope="prototype">
        <constructor-arg index="0" name="username" type="java.lang.String" ref="driver"/>
        <constructor-arg index="1" name="poolSize" type="int" value="10"/>
        <constructor-arg index="2" name="args" type="java.util.List">
            <list>
                <value>--arg1=value1</value>
                <value>--arg2=value2</value>
                <ref bean="driver"/>
            </list>
        </constructor-arg>
        <constructor-arg index="3" name="properties" type="java.util.Map">
            <null/>
        </constructor-arg>
        <property name="properties">
            <map>
                <entry key="url" value="postgresurl"/>
                <entry key="password" value="123"/>
                <entry key="driver" value-ref="driver"/>
            </map>
        </property>
    </bean>

    <!-- Создали бин companyRepository и сослались на бин с id = pool1, используя фабричный метод of, в который передали ConnectionPool-->
    <bean id="companyRepository" class="org.example.database.repository.CompanyRepository" factory-method="of">
        <constructor-arg ref="pool1"/>
    </bean>
</beans>